@model BookStore.Models.Book

    <h1>Edit Form</h1>
<form method="post" asp-action="Edit">
    <input asp-for="@Model.Id" hidden />
    <div class="form-group">
        <label asp-for="@Model.BookName">Book Name</label>
        <input class="form-control" asp-for="@Model.BookName">
        <span asp-validation-for="@Model.BookName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Author">Author</label>
        <input class="form-control" asp-for="@Model.Author">
        <span asp-validation-for="@Model.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Stock">Stock</label>
        <input class="form-control" asp-for="@Model.Stock">
        <span asp-validation-for="@Model.Stock" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Update Book</button>
</form>